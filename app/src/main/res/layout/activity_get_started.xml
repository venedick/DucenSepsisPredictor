<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    android:padding="@dimen/dm_30">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_200"
        android:paddingLeft="@dimen/dm_10"
        android:paddingRight="@dimen/dm_10"
        app:srcCompat="@drawable/new_analance_logo_450w" />

    <Button
        android:id="@+id/btn_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_200"
        android:background="@drawable/btn_white"
        android:fontFamily="@font/roboto_black"
        android:padding="@dimen/dm_20"
        android:text="@string/get_started"
        android:textColor="@color/fontColor"
        android:textSize="18sp" />

</LinearLayout>